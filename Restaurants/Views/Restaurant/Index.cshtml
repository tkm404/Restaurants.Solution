@{
  Layout = "_Layout";
}

@using Restaurants.Models;
@model List<Restaurants.Models.Restaurant>;

<h1> how did you get here??? </h1>
@if (@Model.Count == 0)
{
  <h3>There are no Restaurants to display.</h3>
}
else{
  <ul>
    @foreach (Restaurant restaurant in Model)
    {
      <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cuisine.Type</li>
    }
  </ul>
}


<p>@Html.ActionLink("Home", "Index", "Home")</p>
<br>
<p>@Html.ActionLink("Edit a restaurant", "Edit")</p> 