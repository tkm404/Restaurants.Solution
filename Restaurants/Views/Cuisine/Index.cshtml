@{
  Layout = "_Layout";
}

@using Restaurants.Models;

<h1>Cuisines</h1>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
} 

<ul>
  @foreach(Cuisine cuisine in Model)
  {
    <li>@Html.ActionLink($"{cuisine.Type}", "Details", new { id = cuisine.CuisineId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new restaurant to this cuisine", "Create", "Restaurant")</p>
